<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Exam-Prep</title>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon">
    <link rel="stylesheet" href="/CSS/styles.css">
  </head>
  <body>
    <% response.setHeader("Cache-Control", "no-cache, no-store, must-revalidate"); %>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand">Exam-Prep</a>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
<section class="articles">
  <div class="container-fluid">
    <form class="compose-box" action="/compose/<%= username %>" method="post">
      <div class="compose-value">
        <div class="row">
          <div class="col-md-6">
            <input type="text" name="subject" autocomplete="off" placeholder="Enter subject name" required>
          </div>
          <div class="col-md-6">
            <input type="text" name="year" autocomplete="off" placeholder="Enter year of study" required>
          </div>
        </div>
        <br>
        <textarea name="article" rows="8" cols="80" placeholder="Enter your article here" required></textarea>
        <br>
        </div>
        <button type="submit" class="btn">Publish</button>
    </form>
    <div class="row">
      <% content.forEach(function(element){ %>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title"><%= element.subject %></h3>
            <h5 class="card-title"><%= element.username %></h5>
            <h5 class="card-title"><%= element.year %></h5>
            <p class="card-text"> <%= element.article.substring(0,100) +"...." %><a class="page" href="/posts/<%= element._id %>">Read More</a></p>
            <div class="row">
              <div class="col-md-6">
                <form class="edit" action="/edit" method="post">
                  <input type="hidden" name="id" value="<%= element._id %>"></input>
                  <button class="btn" type="submit" name="editButton">Edit <ion-icon name="create"></ion-icon></button>
                </form>
              </div>
               <div class="col-md-6">
                 <form class="delete" action="/delete/<%= element._id %>" method="post" onsubmit="return confirm('Are you sure?');">
                 <button class="btn" type="submit" name="deleteButton">Delete <ion-icon name="trash"></ion-icon></button>
               </form>
               </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>

<%- include("footer"); -%>
